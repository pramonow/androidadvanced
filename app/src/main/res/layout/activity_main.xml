<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Animation activity" android:id="@+id/animation_button"
            android:layout_gravity="center"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Canvas activity" android:id="@+id/canvas_button"
            android:layout_gravity="center"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Custom View activity" android:id="@+id/custom_button"
            android:layout_gravity="center"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="JNI activity" android:id="@+id/jni_button"
            android:layout_gravity="center"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Maps activity" android:id="@+id/maps_button"
            android:layout_gravity="center"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Recorder activity" android:id="@+id/recorder_button"
            android:layout_gravity="center"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Shake activity" android:id="@+id/shake_button"
            android:layout_gravity="center"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Speech to Text activity" android:id="@+id/speech_text_button"
            android:layout_gravity="center"/>

</LinearLayout>